{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6"
    ],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}
